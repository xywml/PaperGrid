# Database
DATABASE_URL="file:./dev.db"
# Optional: dedicated SQLite file for AI vector index (recommended in production)
# AI_VECTOR_DATABASE_URL="file:/data/ai-index.sqlite"
# Optional: SQLite journal mode used by AI vector index module
# Stable default is DELETE; set WAL only when storage is confirmed stable
# SQLITE_JOURNAL_MODE="DELETE"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# Local media storage
MEDIA_ROOT="/data/uploads"
MEDIA_MAX_UPLOAD_MB="10"
MEDIA_MAX_INPUT_PIXELS="40000000"
MEDIA_RESOLVE_CACHE_TTL_MS="30000"

# Init admin (recommended in production)
INIT_ADMIN_TOKEN=""
ADMIN_INIT_PASSWORD=""

# GitHub OAuth (Get from: https://github.com/settings/developers)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Google OAuth (Get from: https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Cloudinary (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Email Notifications (SMTP)
SMTP_HOST=""
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER=""
SMTP_PASS=""
# Comma-separated recipients. If empty, the system will send to all admin emails.
EMAIL_TO=""
# Optional denylist for reply notifications (comma/newline separated)
EMAIL_REPLY_DENYLIST=""
# Optional signing secret for unsubscribe links (fallbacks to NEXTAUTH_SECRET)
EMAIL_UNSUBSCRIBE_SECRET=""
# Token expiration days for unsubscribe link
EMAIL_REPLY_UNSUBSCRIBE_EXPIRE_DAYS="365"

# Gotify (Optional - for notifications)
GOTIFY_URL=""
GOTIFY_TOKEN=""

# AI (Optional - OpenAI-compatible)
AI_OPENAI_API_KEY=""
# Optional fallback, if not configured in admin AI settings
OPENAI_API_KEY=""

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_DEFAULT_LOCALE="zh"
# Optional: override logger level (fatal/error/warn/info/debug/trace/silent)
# LOG_LEVEL="info"
